﻿@using Agenda.DTOs
@model IEnumerable<responseContactDTO>


<h1>CONTACTOS</h1>
<div class="row"> </div>
    @foreach(var c in Model){

    <div class="card m-1" style="width: 18rem; ">
     <div class="card-body">
    <h5 class="card-title">@Html.DisplayFor(m => c.Name)</h5>
    <p class="card-text text-muted">@Html.DisplayFor(m => c.Surname)</p>
    <p href="#" class="card-link">@Html.DisplayFor(m => c.Tel)</p>

    <a asp-action="deleteContact" asp-route-id="@c.Id" >
    <i class="fa fa-trash fa-2x" aria-hidden="true"></i>
    </a>
    <a asp-action="Edit" asp-route-id="@c.Id">
    <i class="fa fa-pencil fa-2x" aria-hidden="true"></i>
    </a>
                 
  </div>
</div>

}


@if (Model.Count() == 0)
{
    <h4 class="bg-succes mt-0">No tiene contactos</h4>
    
    
  <div class="col-3">
   
<a class="btn btn-danger mt-3" asp-area="" asp-controller="Contacts" style="text-align:center" asp-action="New">Agregar Contacto</a> 

 </div>
 }
    else
 {
   <div class="col-3">
<a class="btn btn-primary mt-3" asp-area="" asp-controller="Contacts" asp-action="New">Agregar Contacto</a>
</div>
  }
