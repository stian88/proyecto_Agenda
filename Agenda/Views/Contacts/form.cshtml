@model Agenda.DTOs.createContactDTO

@{
}
<div class="col-4">
<form asp-action="createContact">
  <div class="mb-3">
    <label for="Name" class="form-label">Nombre del contacto</label>
    <input type="text" asp-for="Name" class="form-control" id="Name" >
  </div>
  <div class="mb-3">
    <label for="Surname" class="form-label">Apellido del contacto</label>
    <input type="text" asp-for="Surname" class="form-control" id="Surname">
  </div>
  <div class="mb-3">
    <label for="Tel" class="form-label">Telefono del contacto</label>
    <input type="text" asp-for="Tel" class="form-control" id="Tel">
  </div>
  <button type="submit" class="btn btn-primary">Guardar</button>
</form>
</div>
